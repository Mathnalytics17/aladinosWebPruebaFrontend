{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./shared/components/*"],
      "@context/*": ["./shared/context/*"],
      "@formats/*": ["./shared/formats/*"],
      "@hooks/*": ["./shared/hooks/*"],
      "@lib/*": ["./shared/lib/*"],
      "@schemas/*": ["./shared/schemas/*"],
      "@styles/*": ["./styles/*"],
      "@views/*": ["./views/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
